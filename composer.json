{
    "name": "vadimcontenthunter/my-logger",
    "description": "git scripts",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Vadim",
            "email": "project.k.vadim@gmail.com"
        }
    ],
    "require": {
        "psr/log": "^3.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^9.5.16"
    },
    "autoload": {
        "psr-4": {
            "vadimcontenthunter\\MyLogger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "vadimcontenthunter\\MyLogger\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": [
            "./vendor/bin/phpcs"
        ],
        "phpunit_tests_all":[
            "./vendor/bin/phpunit"
        ],
        "phpdoc": [
            "php phpDocumentor.phar -d ./src -t ./docs/"
        ]
    }
}
